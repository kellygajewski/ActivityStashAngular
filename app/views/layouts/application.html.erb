<!DOCTYPE html>
<html>
<head>
  <title>Activity Stash</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <link href='http://fonts.googleapis.com/css?family=Lobster+Two' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <ul class="nav navbar-nav logo">
        <li><%= link_to "Activity Stash", root_path %></li>
      </ul>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "List View", activities_path %></li>
        <li><%= link_to "Map View", spots_path %></li>
        <li><%= link_to "Activity Categories", categories_path %></li>
        <li><%= link_to "Add New Activity", new_activity_path %></li>
        <li><%= link_to "Add New Category", new_category_path %></li>
    	</ul>

      <ul class="nav navbar-nav navbar-right">
    	<% if session[:remember_token] %>
      		<li><%= link_to "Log Out", sessions_path, method: :delete %></li>
    	<% else %>
      		<li><%= link_to "Sign Up", new_user_path %></li>
      		<li><%= link_to "Sign In", new_sessions_path %></li>  
    	<% end %>
  		</ul>
  </div>
</div>
</nav>
<div class="container-fluid">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

<script type="text/javascript"> //randomizes background image
  var randombgs=["/assets/IMG_0007.jpg", "/assets/IMG_0011.jpg", "/assets/P1000547.JPG", "/assets/IMG_0041.jpg"];

  document.body.style.background='url('+randombgs[Math.floor(Math.random()*randombgs.length)]+') fixed center no-repeat';
  document.body.style.backgroundSize='cover';
</script>
  
<%= yield %>

</body>
</html>
